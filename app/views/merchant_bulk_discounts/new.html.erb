<h1>Create a Discount</h1>
<h3>Merchant: <%= @merchant.name %></h3>
<br>
<%if flash[:messages] %>
<section id="errors">
  <% flash[:messages].each do |message| %>
    <h3>Error: <%= message %></h3>
  <%end%>
</section>
<%end%>
<br>
<section id="create_discount">
  <%= render partial: 'form', locals: { url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post } %>
</section>
