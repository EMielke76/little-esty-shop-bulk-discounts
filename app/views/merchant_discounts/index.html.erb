<h1><%= @merchant.name %>'s Discounts</h1>

<% @merchant.bulk_discounts.each do |discount| %>
  <section id="discount_<%=discount.id%>">
    <h3>Percent Discount: <%= discount.format_discount %></h3>
    <p>Threshold: <%= discount.threshold%> items</p>
    <%= link_to "Discount #{discount.id}'s Information", "/merchants/#{@merchant.id}/discounts/#{discount.id}" %>
    <%= link_to "Delete #{discount.id}", "/merchants/#{@merchant.id}/discounts/#{discount.id}", method: :delete %>
  </section>
<%end%>
<br>

<section id="links_to_elsewhere">
  <%= link_to "Create a Discount", "/merchants/#{@merchant.id}/discounts/new" %>
</section>
