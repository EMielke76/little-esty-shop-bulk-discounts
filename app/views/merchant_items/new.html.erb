<h1>New Item for <%= @merchant.name %></h1>
<div id=create_item>
  <%= form_with url: "/merchants/:id/items/", method: :post, local: true do |form| %>
    <%= form.label "Name:" %>
    <%= form.text_field :name %>
    <%= form.label "Description:" %>
    <%= form.text_field :description %>
    <%= form.label "Unit Price:" %>
    <%= form.text_field :unit_price %>
    <%= form.submit 'Submit' %>
  <% end %>
</div>
