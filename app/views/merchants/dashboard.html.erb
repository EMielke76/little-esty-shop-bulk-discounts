<h1><%= @merchant.name %></h1>
<p><%= link_to "Invoices", "/merchants/#{@merchant.id}/invoices"  %></p>
<p><%= link_to "Items", "/merchants/#{@merchant.id}/items"  %></p>

<div class="top_customers">
  <h3>Top Customers</h3>
  <% @merchant.top_customers(5).each do |customer| %>
    <p><%= "Name: #{customer.full_name}" %></p>
  <% end %>
</div>
